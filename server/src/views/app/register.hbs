<main class="pt-90">
  <div class="mb-4 pb-4"></div>
  <section class="login-register container">
    <ul class="nav nav-tabs mb-5" id="login_register" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link nav-link_underscore active" id="register-tab" data-bs-toggle="tab" href="#tab-item-register"
          role="tab" aria-controls="tab-item-register" aria-selected="true">Register</a>
      </li>
    </ul>
    {{#if alertMessage}}
    <p style="color: red;">{{message}}</p>
    {{/if}}
    <div class="tab-content pt-2" id="login_register_tab_content">
      <div class="tab-pane fade show active" id="tab-item-register" role="tabpanel" aria-labelledby="register-tab">
        <div class="register-form">
          <form method="POST" action="/register" name="register-form" class="needs-validation" novalidate="">
            <div class="form-floating mb-3">
              <input class="form-control form-control_gray " name="name" value="{{oldData.name}}" required="" autocomplete="name"
                autofocus="">
              <label for="name">Name</label>
            </div>
            <div class="pb-3"></div>
            <div class="form-floating mb-3">
              <input id="email" type="email" class="form-control form-control_gray " name="email" value="{{oldData.email}}" required=""
                autocomplete="email">
              <label for="email">Email address *</label>
            </div>

            <div class="pb-3"></div>

            <div class="form-floating mb-3">
              <input id="phone" type="text" class="form-control form-control_gray " name="phone" value="{{oldData.phone}}" required=""
                autocomplete="phone"  >
              <label for="phone">Phone number (10 digits) *</label>
            </div>

            <div class="pb-3"></div>

            <div class="form-floating mb-3">
              <input id="password" type="password" class="form-control form-control_gray" name="password" required=""
                autocomplete="new-password" >
              <i class="fa-solid fa-eye fa-eye-position" id="toggle-password-show" style="cursor: pointer;"></i>
              <i class="fa-solid fa-eye-low-vision fa-eye-position" id="toggle-password-hide"
                style="cursor: pointer; display: none;"></i>
              <label for="password">Password *</label>
            </div>

            <div class="form-floating mb-3">
              <input id="password-confirm" type="password" class="form-control form-control_gray"
                name="password_confirmation" required="" autocomplete="new-password">
              <i class="fa-solid fa-eye fa-eye-position" id="toggle-password-show-confirm" style="cursor: pointer;"></i>
              <i class="fa-solid fa-eye-low-vision fa-eye-position" id="toggle-password-hide-confirm"
                style="cursor: pointer; display: none;"></i>
              <label for="password-confirm">Confirm Password *</label>
            </div>

            <div class="d-flex align-items-center mb-3 pb-2">
              <p class="m-0">Your personal data will be used to support your experience throughout this website, to
                manage access to your account, and for other purposes described in our privacy policy.</p>
            </div>

            <button class="btn btn-primary w-100 text-uppercase" type="submit">Register</button>

            <div class="customer-option mt-4 text-center">
              <span class="text-secondary">Have an account?</span>
              <a href="/login" class="btn-text js-show-register">Login to your Account</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</main>



<script>
  // Toggle password visibility for the first password field
  if (document.getElementById('toggle-password-show')) {
    document.getElementById('toggle-password-show').addEventListener('click', function () {
      const passwordField = document.getElementById('password');
      const showIcon = document.getElementById('toggle-password-show');
      const hideIcon = document.getElementById('toggle-password-hide');

      passwordField.type = 'text';

      showIcon.style.display = 'none';
      hideIcon.style.display = 'inline';
    });

    document.getElementById('toggle-password-hide').addEventListener('click', function () {
      const passwordField = document.getElementById('password');
      const showIcon = document.getElementById('toggle-password-show');
      const hideIcon = document.getElementById('toggle-password-hide');

      passwordField.type = 'password';
      showIcon.style.display = 'inline';
      hideIcon.style.display = 'none';
    });
  }

  // Toggle password visibility for the confirm password field
  if (document.getElementById('toggle-password-show-confirm')) {
    document.getElementById('toggle-password-show-confirm').addEventListener('click', function () {
      const passwordField = document.getElementById('password-confirm');
      const showIcon = document.getElementById('toggle-password-show-confirm');
      const hideIcon = document.getElementById('toggle-password-hide-confirm');

      passwordField.type = 'text';

      showIcon.style.display = 'none';
      hideIcon.style.display = 'inline';
    });

    document.getElementById('toggle-password-hide-confirm').addEventListener('click', function () {
      const passwordField = document.getElementById('password-confirm');
      const showIcon = document.getElementById('toggle-password-show-confirm');
      const hideIcon = document.getElementById('toggle-password-hide-confirm');

      passwordField.type = 'password';
      showIcon.style.display = 'inline';
      hideIcon.style.display = 'none';
    });
  }
</script>